{
  "name": "oqool-desktop",
  "version": "1.0.0",
  "description": "Oqool AI Desktop IDE - بيئة تطوير متكاملة بقوة الذكاء الاصطناعي",
  "main": "index.js",
  "author": "Oqool Team",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:electron && concurrently -k \"npm run dev:vite\" \"npm run dev:electron\" -n \"VITE,ELECTRON\" -c \"bgBlue.bold,bgMagenta.bold\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron . --no-sandbox",
    "build": "tsc && vite build",
    "build:dist": "tsc && vite build && electron-builder",
    "build:electron": "tsc -p electron/tsconfig.json",
    "preview": "vite preview",
    "lint": "eslint src electron --ext .ts,.tsx",
    "lint:fix": "eslint src electron --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@monaco-editor/react": "^4.6.0",
    "chokidar": "^3.5.3",
    "electron-updater": "^6.1.8",
    "fs-extra": "^11.2.0",
    "monaco-editor": "^0.44.0",
    "node-pty": "^1.0.0",
    "openai": "^6.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "simple-git": "^3.22.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/xterm": "^3.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  }
}
