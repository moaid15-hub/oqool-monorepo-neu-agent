{
  "name": "@oqool/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Oqool AI - Professional IDE with CLI, Desktop, and Cloud Editor",
  "author": "Oqool Team",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:workspaces": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules coverage",
    "dev:cli": "npm run dev --workspace=@oqool/cli",
    "dev:desktop": "npm run dev --workspace=@oqool/desktop",
    "dev:cloud": "npm run dev --workspace=@oqool/cloud-editor",
    "build:cli": "npm run build --workspace=@oqool/cli",
    "build:desktop": "npm run build --workspace=@oqool/desktop",
    "build:cloud": "npm run build --workspace=@oqool/cloud-editor",
    "build:all": "npm run build --workspaces",
    "install:all": "npm install && npm run install --workspaces",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "analyze": "node scripts/analyze-bundle.js",
    "check:size": "node scripts/check-bundle-size.js",
    "precommit": "npm run lint && npm run type-check && npm run check:size",
    "prepare": "husky install",
    "release": "npm run ci && git tag -a v$(node -p \"require('./package.json').version\") -m \"Release v$(node -p \"require('./package.json').version\")\"",
    "ci": "npm run lint && npm run type-check && npm run test && npm run build"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.56.1",
    "@sentry/webpack-plugin": "^2.20.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^9.0.0",
    "jest": "^30.2.0",
    "pm2": "^5.3.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "snyk": "^1.1300.2",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.5",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@sentry/node": "^8.0.0",
    "@sentry/react": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ai",
    "ide",
    "cli",
    "desktop",
    "code-editor",
    "oqool",
    "typescript",
    "electron",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moaid15-hub/oqool-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/moaid15-hub/oqool-monorepo/issues"
  },
  "homepage": "https://github.com/moaid15-hub/oqool-monorepo#readme"
}
