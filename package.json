{
  "name": "@oqool/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Oqool AI - Professional IDE with CLI, Desktop, and Cloud Editor",
  "author": "Oqool Team",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:workspaces": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules coverage",
    "dev:cli": "npm run dev --workspace=@oqool/cli",
    "dev:desktop": "npm run dev --workspace=@oqool/desktop",
    "dev:cloud": "npm run dev --workspace=@oqool/cloud-editor",
    "build:cli": "npm run build --workspace=@oqool/cli",
    "build:desktop": "npm run build --workspace=@oqool/desktop",
    "build:cloud": "npm run build --workspace=@oqool/cloud-editor",
    "build:all": "npm run build --workspaces",
    "install:all": "npm install && npm run install --workspaces",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.5",
    "turbo": "^1.13.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ai",
    "ide",
    "cli",
    "desktop",
    "code-editor",
    "oqool",
    "typescript",
    "electron",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moaid15-hub/oqool-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/moaid15-hub/oqool-monorepo/issues"
  },
  "homepage": "https://github.com/moaid15-hub/oqool-monorepo#readme"
}
